<div class="center">
    <div class="container">
        <h1 class="center">Top Playlists</h1>

        <div class="container">
            <br/>
            <br/>
            <%= link_to 'Create New Playlist', new_list_path, class:'btn-large' %>
            <br/>
            <br/>
            <br/>
            <% @lists.each do |list|%>
                <ul>
                    <li>
                    <div style="display:flex; justify-content: space-around">
                        <%= list.name %> 
                        <%= link_to 'View Playlist', list_path(list) %> 
                        <%= link_to 'Edit Playlist', edit_list_path(list) %>
                        <%= link_to 'Delete Playlist', list_path(list) , method: :delete %>
                         </div>
                    </li>
                    <hr/>
                </ul>
            <% end %>
        </div>
    </div>
</div>