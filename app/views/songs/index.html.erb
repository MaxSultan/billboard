<div class='center'>
    <div class="container">
        <div class="card z-darken-4">
            <h1><%= @artist.full_name %></h1>

            <% @songs.each do |song|%>
            <%= song.name %> <%= song.time %>
            <hr/>
            <% end %>

            <%= link_to 'Add Song', new_artist_song_path(@artist), class: 'btn-large'%>
            <%= link_to 'Back to Artists', root_path, class:'btn-large'%>
            <%= link_to 'Delete Artist', artist_path(@artist), method: :delete, class:'btn-large red darken-2'%>
            <br/>
            <br/>
        </div>
    </div>
</div>